{
  "name": "outer-siraji-site",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Static dictionary + works site for Outer Siraji (Pahari) with CSV-driven build and GitHub Pages deploy",
  "scripts": {
    "build": "node scripts/build.mjs",
    "clean": "node -e \"import('node:fs').then(fs=>fs.rmSync('public/data',{recursive:true,force:true}))\"",
    "serve": "npx http-server public -p 8080 -c-1"
  },
  "dependencies": {
    "csv-parse": "^5.5.5",
    "lunr": "^2.3.9"
  },
  "engines": {
    "node": ">=18"
  }
}

